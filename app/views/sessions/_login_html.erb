<!-- Login Form -->
<div class="container-fluid sign-up">
	<div class="row">
		<div class="col-md-4"></div>
		<div class="col-md-4">
		<h1>Log In</h1>
			<div class="form-horizontal">
				<%= form_for :user, url: '/login' do |f| %>
				<div class="form-group">
				Email: <%= f.text_field :email, class: 'form-control' %>
				</div>
				<div class="form-group">
				Password: <%= f.password_field :password, class: 'form-control' %>
				</div>
				<%= f.submit "login", class: 'btn btn-default' %>
				<% end %>
			</div>
		</div>
	</div>
</div>