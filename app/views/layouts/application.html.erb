<!DOCTYPE html>
<html>
<head>
  <title>Knappsack</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body ng-app>

<!-- Navbar Start -->

<nav class="navbar navbar-fixed-top nav">
  <div class="container-fluid">
    <div class="navbar-header">
<!--     <div class="navbar-form navbar-left" role="search">
    <div class="form-group">
    	<input type="text" class="form-control" placeholder="Search">
    </div>
    	<button type="submit" class="btn btn-default red">X</button>
    </div> -->
    <div class="navbar-text">
    	<!-- Login / Sign up Links Start-->
	    <% if current_user %>
			<%= current_user.first_name.upcase + " " + current_user.last_name.upcase %> | <%= link_to "SIGN OUT", logout_path %>
			<% else %>
			<!-- Button trigger modal -->
			<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#signupModal">
		 	 Sign Up
			</button>
			<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#loginModal">
		 	 Login
			</button>
			<!-- link_to "LOGIN", login_path | link_to "SIGN UP", signup_path --> 
			<% end %>
    </div>
  </div>
</nav>
<!-- Navbar end -->

<!-- Sign Up Modal -->
<div class="modal fade" id="signupModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header mod-head">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span class="red" aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Sign Up</h4>
      </div>
      <div class="modal-body">
       <%= render partial: "signup" %>{{3*7}}
      </div>
    </div>
  </div>
</div>

<!-- Login Modal -->
<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header mod-head">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span class="red" aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Login</h4>
      </div>
      <div class="modal-body">
      ///
      </div>
    </div>
  </div>
</div>

<%= yield %>

</body>

</html>