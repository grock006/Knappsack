<div class="events-box container-fluid">

<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#newModal">
  New Event
</button>

</div>

<div class="modal fade" id="newModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header mod-head">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span class="red" aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Add Event</h4>
      </div>
      <div class="modal-body">
       <%= render partial: "form" %>{{3*7}}
      </div>
    </div>
  </div>
</div>

</div>