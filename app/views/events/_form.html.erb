<div class="container">
  <div class="row">
    <div class="col-md-2"></div>
         <div class="col-md-8">
          <h1>New Event</h1>

          <%= form_for @event do |f| %>
            <div class='form-group'>
              Name
              <%= f.text_field :name, class: 'form-control' %>
            </div>
            <div class='form-group'>
              Category
              <%= f.text_field :category, class: 'form-control' %>
            </div>
            <div class='form-group'>
              Description
              <%= f.text_area :description, class: 'form-control' %>
            </div>
          <div class='form-group'>
              Name
              <%= f.text_field :rating, class: 'form-control' %>
            </div>
            <div class='form-group'>
              Name
              <%= f.text_field :main_url, class: 'form-control' %>
            </div>
          <div class='form-group'>
              Name
              <%= f.text_field :location, class: 'form-control' %>
            </div>
  
            <div class='form-group'>
              Start Time
              <%= f.time_field :start_time, class: 'form-control' %>
            </div>
            <div class='form-group'>
              End Time
              <%= f.time_field :end_time, class: 'form-control'  %>
            </div>
               <div class='form-group'>
              Integer ID
              <%= f.hidden_field :itinerary_id, class: 'form-control'  %>
            </div>
            <div class='form-group'>
              <%= f.submit 'Submit', class: 'form-control btn btn-primary' %>
            </div>
          <% end %>

        </div>
      <div class="col-md-2">    
      <div class="col-md-2">    
      </div>
    </div>
  </div>
