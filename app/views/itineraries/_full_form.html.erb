<div class="container">
  <div class="row">
    <div class="col-md-2"></div>
         <div class="col-md-8">
          <h1>New Itinerary</h1>

          <%= form_for @itinerary do |f| %>
            <div class='form-group'>
              Name
              <%= f.text_field :name, class: 'form-control' %>
            </div>
            <div class='form-group'>
              Description
              <%= f.text_area :description, class: 'form-control' %>
            </div>
            <div class='form-group'>
              Start Date
              <%= f.date_field :start_date, class: 'form-control datepicker' %>
            </div>
            <div class='form-group'>
              End Date
              <%= f.date_field :end_date, class: 'form-control datepicker'  %>
            </div>
            <div class='form-group'>
              <%= f.submit 'Submit', class: 'form-control btn btn-default' %>
            </div>
          <% end %>

        </div>
      <div class="col-md-2">    
      <div class="col-md-2">    
      </div>
    </div>
  </div>


