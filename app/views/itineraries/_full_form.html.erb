<div class="col-md-3"></div>
<div class="b4 col-md-6 text-center">EDIT</div>
<div class="col-md-3"></div>

<div class="container edit-itin-form">
<%= form_for @itinerary do |f| %>
    <div class="row">
      <div class="col-md-3"></div>
        <div class='form-group col-md-6'>
          Name <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="col-md-3"></div>
      </div>
      <div class="row">
        <div class="col-md-3"></div>
        <div class='form-group col-md-6'>
          Description <%= f.text_area :description, class: 'form-control' %>
        </div>
      <div class="col-md-3"></div>
    </div>
    <div class="row">
      <div class="col-md-3"></div>
      <div class='form-group col-md-3'>
        Start Date <%= f.date_field :start_date, class: 'form-control' %>
      </div>
      <div class='form-group col-md-3'>
        End Date <%= f.date_field :end_date, class: 'form-control'  %>
      </div>
      <div class="col-md-3"></div>
    </div>
    <div class="row">
      <div class="col-md-3"></div>
      <div class='form-group col-md-6'>
        <%= f.submit 'Save', class: 'form-control btn btn-primary' %>
      </div>
      <div class="col-md-3"></div>
    </div>
    <% end %>
</div>




