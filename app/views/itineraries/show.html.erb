<h1><%= @itinerary.name %></h1>

<div class="row">

<% @itinerary.date_range.each do |i| %>
<div class="box">
	<strong><%= i.strftime("%B") %><strong><br>
			<%= i.strftime("%A") %>
			<%= i.strftime("%d") %>
			<h1>
				<a ng-click="event = !event"><%= @itinerary.events.count %></a>
			</h1>
			<h3>EVENTS</h3>
</div>
<% end %>

<div ng-show="event" class="event-box">
	<% @itinerary.events.each do |e| %>
	<%= e.name.upcase %><br>
	<%= e.category.capitalize %><br>
	<%= e.date.strftime("%m/%d/%Y") %><br>
	START: <%= e.start_time.strftime("%I:%M") %><br>
	END: <%= e.end_time.strftime("%I:%M") %><br>
	<% end %>
</div>

</div>
