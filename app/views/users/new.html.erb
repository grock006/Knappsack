

<div class="container-fluid sign-up">

	<div class="row">
		<div class="col-md-4"></div>
		<div class="col-md-4">
		<h1>Sign Up</h1>
		<div class="form-horizontal">
				<%= form_for @user do |f| %>
				<!-- Start Sign Up form -->
				<div class="form-group">
					First: <%= f.text_field :first_name, class: 'form-control' %>
				</div>
				<div class="form-group">
					Last: <%= f.text_field :last_name, class: 'form-control' %>
				</div>
				<div class="form-group">
					Email: <%= f.text_field :email, class: 'form-control' %>
				</div>
				<div class="row">
					<div class="col-xs-6">
					<div class="form-group">
						Age: <%= f.text_field :age, class: 'form-control' %>
					</div>
					</div>
					<div class="col-xs-6">
					<div class="form-group">
						Gender: <%= f.text_field :gender, class: 'form-control' %>
					</div>
					</div>
				</div>
				<div class="form-group">
					Password <%= f.password_field :password, class: 'form-control' %>
				</div>
				<div class="form-group">
					Confirm <%= f.password_field :password_confirmation, class: 'form-control' %>
				</div>
				<%= f.submit "SIGN UP", class: 'btn btn-default' %>
				<!-- End Sign Up Form -->
				<% end %>
				</div>
		</div>
		</div>
		<div class="col-md-4"></div>
	</div>
</div>