<!-- SignUp Form -->

		<div class="form">
				<!-- Start Sign Up form -->
				<% flash.each do |key, value| %>
				  <div class=' alert alert-dismissible alert-<%= key %>' role='danger'>
				  <%= value %>
				  <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				  </div>
				<% end %>				
	
				<%= form_for @user do |f| %>
				<div class="form-group">
					First: <%= f.text_field :first_name, class: 'form-control' %><span class="help-block"></span>
				</div>
				<div class="form-group">
					Last: <%= f.text_field :last_name, class: 'form-control' %><span class="help-block"></span>
				</div>
				<div class="form-group">
					Email: <%= f.text_field :email, class: 'form-control' %><span class="help-block"></span>
				</div>
				<div class="row">
					<div class="col-xs-6">
					<div class="form-group">
						Age: <%= f.text_field :age, class: 'form-control' %><span class="help-block"></span>
					</div>
					</div>
					<div class="col-xs-6">
					<div class="form-group">
						Gender: <%= f.text_field :gender, class: 'form-control' %><span class="help-block"></span>
					</div>
					</div>
				</div>
				<div class="form-group">
					Password <%= f.password_field :password, class: 'form-control' %><span class="help-block"></span>
				</div>
				<div class="form-group">
					Confirm <%= f.password_field :password_confirmation, class: 'form-control' %><span class="help-block"></span>
				</div>

				<%= f.submit "SIGN UP", class: 'btn btn-primary' %>
				<% end %>
				<!-- End Sign Up Form -->
	</div>

	<!--  -->
